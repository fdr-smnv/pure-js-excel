{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {},
      "webpack": {}
    }
  },
  "rules": {
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
    "arrow-parens": "off",
    "no-use-before-define": "off",
    "no-param-reassign": "off",
    "default-case": "off",
    "no-tabs": "off",
    // "indent": ["error", "tab"],
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
  },
  "extends": [
    "eslint:recommended","airbnb-base"
  ]
}
